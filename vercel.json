{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "booking-backend/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/booking-backend/src/server.ts"
    },
    {
      "source": "/api/calendar/(.*)",
      "destination": "/api/calendar/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}