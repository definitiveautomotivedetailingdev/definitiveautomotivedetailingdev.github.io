{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/booking-backend/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "api/booking-backend/src/server.ts"
    },
    {
      "source": "/:path*",
      "destination": "dist/index.html"
    }
  ]
}
