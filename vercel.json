{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "booking-backend/src/server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/calendar/*",
      "dest": "booking-backend/src/server.ts"
    },
    {
      "src": "/api/health",
      "dest": "booking-backend/src/server.ts"
    },
    {
      "src": "/*",
      "dest": "/frontend/dist/index.html"
    }
  ]
}